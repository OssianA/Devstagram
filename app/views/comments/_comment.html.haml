#comment
  .user-name
    = comment.user.username
  .comment-content
    = comment.content
  - if comment.user == current_user
    = link_to post_comment_path(post, comment), method: :delete, remote: true, data: {confirm: "Are you sure you want to delete this comment?"} do
      %span(class="glyphicon glyphicon-remove delete-comment")